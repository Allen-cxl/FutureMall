<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:id = "@+id/activity_update_pay_password"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "@color/line"
    android:orientation = "vertical"
    tools:context = "com.futuremall.android.ui.activity.UpdatePayPasswordActivity" >

    <include layout = "@layout/toolbar_super" />

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "20dp"
        android:background = "@android:color/white"
        android:orientation = "vertical" >

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:gravity="center_vertical"
            android:orientation = "horizontal"
            android:paddingBottom = "10dp"
            android:paddingLeft = "20dp"
            android:paddingTop = "10dp" >

            <TextView
                android:layout_width = "80dp"
                android:layout_height = "wrap_content"
                android:text = "@string/phone" />


            <EditText
                android:id = "@id/et_phone"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:background = "@null"
                android:inputType="number"
                android:cursorVisible = "true"
                android:hint = "@string/enter_phone"
                android:textColorHint = "@color/font_gray"
                android:textCursorDrawable = "@null"
                android:textSize = "@dimen/font_normal" />

            <TextView
                android:id="@id/tv_code"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:padding="5dp"
                android:background = "@drawable/selector_textview_bg_orange_gray"
                android:textColor = "@drawable/selector_textview_textcolor_black_white"
                android:layout_marginRight="10dp"
                android:text="获取验证码"/>
        </LinearLayout >

        <View
            android:layout_width = "match_parent"
            android:layout_height = "1dp"
            android:layout_marginLeft = "20dp"
            android:background = "@color/line" />

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "horizontal"
            android:paddingBottom = "10dp"
            android:paddingLeft = "20dp"
            android:paddingTop = "10dp" >

            <TextView
                android:layout_width = "80dp"
                android:layout_height = "wrap_content"
                android:text = "@string/code" />


            <EditText
                android:id = "@id/et_code"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:background = "@null"
                android:cursorVisible = "true"
                android:hint = "@string/enter_code"
                android:textColorHint = "@color/font_gray"
                android:textCursorDrawable = "@null"
                android:textSize = "@dimen/font_normal" />

        </LinearLayout >

        <View
            android:layout_width = "match_parent"
            android:layout_height = "1dp"
            android:layout_marginLeft = "20dp"
            android:background = "@color/line" />

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "horizontal"
            android:paddingBottom = "10dp"
            android:paddingLeft = "20dp"
            android:paddingTop = "10dp" >

            <TextView
                android:layout_width = "80dp"
                android:layout_height = "wrap_content"
                android:text = "@string/new_password" />


            <EditText
                android:id = "@id/et_password"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:background = "@null"
                android:cursorVisible = "true"
                android:hint = "@string/enter_new_password"
                android:textColorHint = "@color/font_gray"
                android:textCursorDrawable = "@null"
                android:textSize = "@dimen/font_normal" />

        </LinearLayout >

        <View
            android:layout_width = "match_parent"
            android:layout_height = "1dp"
            android:layout_marginLeft = "20dp"
            android:background = "@color/line" />

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "1dp"
            android:orientation = "horizontal"
            android:paddingBottom = "10dp"
            android:paddingLeft = "20dp"
            android:paddingTop = "10dp" >

            <TextView
                android:layout_width = "80dp"
                android:layout_height = "wrap_content"
                android:text = "@string/again" />


            <EditText
                android:id = "@id/et_new_password"
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:background = "@null"
                android:cursorVisible = "true"
                android:hint = "@string/again_enter_new_password"
                android:textColorHint = "@color/font_gray"
                android:textCursorDrawable = "@null"
                android:textSize = "@dimen/font_normal" />

        </LinearLayout >

    </LinearLayout >

    <TextView
        android:id = "@id/tv_submit"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_margin = "20dp"
        android:background = "@drawable/selector_textview_bg_orange_gray"
        android:gravity = "center"
        android:padding = "10dp"
        android:text = "提交"
        android:textColor = "@drawable/selector_textview_textcolor_black_white" />
</LinearLayout >
